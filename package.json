{
  "name": "less-advanced-security-action",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Actions runner for less-advanced-security: Bring-your-own PR annotations to any tool which outputs sarif",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliblock/less-advanced-security-action"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^3.0.6",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.1.5",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.39.0",
    "eslint-plugin-github": "^4.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.7",
    "typescript": "^4.9.3"
  }
}
